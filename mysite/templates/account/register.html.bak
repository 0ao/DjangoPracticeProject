{% extends "base.html" %}

{% load staticfiles %}

{% block title %}registration user{% endblock %}

{% block content %}
<div class="row text-center vertical-middle-sm">
    <h1>Sign in Please</h1>
    <form class="form-horizontal" action="." method="post">{% csrf_token %}
        <div class="form-group">
            <label for="{{ user_form.username.id_for_label }}" class="col-md-6 control-label">Username</label>
            <div class="col-md-6 text-left">{{ user_form.username }}</div>
        </div>
        <div class="form-group">
            <label for="{{ user_form.password.id_for_label }}" class="col-md-6 control-label">Password</label>
            <div class="col-md-6 text-left">{{ user_form.password }}</div>
        </div>
        <div class="form-group">
            <label for="{{ user_form.password2.id_for_label }}" class="col-md-6 control-label">Password Again</label>
            <div class="col-md-6 text-left">{{ user_form.password2 }}</div>
        </div>
        <div class="form-group">
            <label for="{{ user_form.email.id_for_label }}" class="col-md-6 control-label">E-mail</label>
            <div class="col-md-6 text-left">{{ user_form.email }}</div>
        </div>
        <div class="form-group">
            <label for="{{ userprofile_form.phone.id_for_label }}" class="col-md-6 control-label">Phone</label>
            <div class="col-md-6 text-left">{{ userprofile_form.phone }}</div>
        </div>
        <div class="form-group">
            <div class="row text-center">
                <p><input class='btn btn-default' type='submit' value='Sign In'></p>
            </div>
        </div>
    </form>
</div>
{% endblock %}

